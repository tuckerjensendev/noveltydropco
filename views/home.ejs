<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Welcome to Novelty Drop Co.</title>
</head>
<body>

  <!-- Include the Header Partial -->
  <%- include('partials/header', { user: user }) %>

  <% if (typeof flashMessage !== 'undefined') { %>
    <div class="flash-message <%= flashType %>">
      <%= flashMessage %>
    </div>
  <% } %>

  <div class="hero">
    <h1>Welcome to Novelty Drop Co.!</h1>
    <p>Your destination for unique finds</p>
  </div>

  <main>
    <section class="products">
      <h2>Featured Products</h2>
      <div class="product-list">
        <% products.forEach(product => { %>
          <div class="product-item">
            <h3><%= product.name %></h3>
            <p><%= product.description %></p>
          </div>
        <% }); %>
      </div>
    </section>
  </main>

  <!-- Overlay for dimming background (specific to registration form) -->
  <div id="overlay" class="overlay hidden"></div>

  <!-- Load JavaScript -->
  <script src="/scripts/main.js"></script>
</body>
</html>
