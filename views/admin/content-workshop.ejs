<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff - Content Workshop</title>
    <link rel="stylesheet" href="/styles/grid-styles.css">
</head>
<body>
    <%- include('../partials/header', { user: user, csrfToken: csrfToken }) %>

    <div class="content-workshop-container">
        <!-- Sidebar Panel -->
        <aside class="side-panel">
            <h2>Pages</h2>
            <ul>
                <li><a href="#" data-page="home" class="active">Home</a></li>
                <li><a href="#" data-page="about">About</a></li>
                <li><a href="#" data-page="services">Services</a></li>
                <li><a href="#" data-page="contact">Contact</a></li>
            </ul>
        </aside>

        <!-- Main Content Area -->
        <section class="main-content">
            <h1>Staff - Content Workshop</h1>
            <div id="sharedToolbar" class="block-controls">
                <label for="blockTypeControl">Block Type:</label>
                <select id="blockTypeControl">
                    <option value="mini-square">Mini Grid Box</option>
                    <option value="mini-rectangle">Mini Grid Rectangle</option>
                    <option value="standard-box">Standard Grid Box</option>
                    <option value="wide-grid-rectangle">Large Grid Rectangle</option>
                    <option value="banner">Banner</option>
                    <option value="mini-square-spacer">Mini Grid Spacer</option>
                    <option value="mini-rectangle-spacer">Mini Grid Rectangle Spacer</option>
                    <option value="standard-box-spacer">Standard Grid Spacer</option>
                    <option value="wide-grid-rectangle-spacer">Large Grid Rectangle Spacer</option>
                    <option value="banner-spacer">Banner Spacer</option>
                </select>
                
                <button id="addBlockButton">Add Block</button>
                <button id="saveButton">Save Layout</button>
            </div>

            <!-- Preview Pane: Adding a note to make sure blocks are directly appended here via JavaScript -->
            <div id="contentPreview" class="grid-container">
                <!-- Ensure that .grid-item elements are appended directly here by JavaScript -->
            </div>
        </section>
    </div>

    <script src="/scripts/Sortable.min.js"></script>
    <script src="/scripts/contentWorkshop.js"></script>
</body>
</html>
